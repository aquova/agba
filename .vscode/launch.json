{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch songbird",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/gui/target/debug/songbird_gui",
            "args": [
                "${workspaceFolder}/games/{$input:game}"
            ],
            "cwd": "${workspaceFolder}/gui",
            "sourceLanguages": ["rust"],
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "game",
            "description": "Title of game",
            "default": "Tetris.gb"
        },
    ]
}
